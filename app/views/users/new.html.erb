<h1>Sign Up</h1>
<%= form_for @user, method: 'POST', :url => url_for(:controller => 'users', :action => 'create') do |f| %>
  <%= f.label "email" %>
  <%= f.text_field :email %>
  <%= f.label "password" %>
  <%= f.password_field :password %>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>
  <%= f.submit "Sign up" %>
<% end %>
